
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    <div id="content">

        <form action="#" method="post" class="beta-form-checkout">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <h4>Đăng nhập</h4>
                    <div class="space20">&nbsp;</div>


                    <div class="form-block">
                        <label for="email">Email address*</label>
                        <input type="text" name="UseName" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="form-block">
                        <label for="phone">Password*</label>
                        <input id="password-field" name="Pass" type="password" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="form-block">
                        <button type="submit" type="submit" class="btn btn-primary" id="SignIn">Login</button>
                    </div>
                </div>
                <div class="col-sm-3"></div>
            </div>
        </form>
    </div> <!-- #content -->
</div> <!-- .container -->
