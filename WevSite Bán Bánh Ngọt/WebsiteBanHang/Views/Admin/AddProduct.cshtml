@model DbWebsite.products
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Product
                    <small>Add</small>
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <div class="col-lg-7" style="padding-bottom:120px">
                @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)
                    @* <div class="form-group">
                            <label>ID</label>
                            @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
                        </div>*@
                    <div class="form-group">
                        <label>Tên sản phẩm</label>
                        @Html.EditorFor(model => model.name_pr, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name_pr, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>ID thể loại</label>
                               @Html.EditorFor(model => model.id_type, new { htmlAttributes = new { @class = "form-control" } })
                   @*     @{
                            Html.RenderAction("ChooseType_Product", "Admin");
                        }*@
                        @Html.ValidationMessageFor(model => model.id_type, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Mô tả</label>
                        @Html.EditorFor(model => model.description_pr, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.description_pr, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá gốc</label>
                        @Html.EditorFor(model => model.unit_price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.unit_price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá khuyến mãi</label>
                        @Html.EditorFor(model => model.promotion_price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.promotion_price, "", new { @class = "text-danger" })
                    </div>
                    <label>Image</label>
                    @*        @Html.EditorFor(model => model.images, new { htmlAttributes = new { @class = "form-control" } })*@<br />
                    <img src="@Url.Content(Model.images)" style="height:200px;width:200px;margin:10px" id="previewImage" />
                    <input type="file" name="ImageUpload" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
                    <br />
                    <div class="form-group">
                        <label>Đơn vị</label>
                        @Html.EditorFor(model => model.unit, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.unit, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Sản phẩm mới</label>
                        @Html.EditorFor(model => model.new_pr, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.new_pr, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Create" class="btn btn-default" />
                    <button type="reset" class="btn btn-default">Khôi phục</button>
                }

            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
